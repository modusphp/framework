#!/usr/bin/env php
<?php

$rootPath = realpath(__DIR__ . '/..');

require_once($rootPath . '/autoload.php');

$file = new League\Flysystem\Adapter\Local(realpath($rootPath . '/..'));

$file->createDir('config');

$contents = $file->listContents('vendor/tailwindsllc/modus/config');

foreach($contents as $content) {
    $fileName = str_replace('vendor/tailwindsllc/modus/', '', $content['path']);
    $file->write($fileName, file_get_contents($content['path']));
}

$file->createDir('public');

$contents = $file->listContents('vendor/tailwindsllc/modus/public');

foreach($contents as $content) {
    $fileName = str_replace('vendor/tailwindsllc/modus/', '', $content['path']);
    $file->write($fileName, file_get_contents($content['path']));
}

print "The Modus framework has been configured. You may now begin work.\n";

exit(0);